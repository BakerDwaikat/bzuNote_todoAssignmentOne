<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#4D4D4D"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shadows"
        android:backgroundTint="#363636"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/newTaskNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBB5B5"
            android:textSize="22sp"
            android:backgroundTint="#E95042"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newTaskDescID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textColor="#FFFFFF"
            android:textColorHint="#A6A6A6"
            android:backgroundTint="#E95042"
            android:textStyle="bold"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#25B84C"
                android:layout_margin="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:background="@drawable/addtasktodaystyle"
                />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>